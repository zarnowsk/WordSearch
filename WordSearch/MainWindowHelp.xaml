<Window x:Name="mainWindowHelpWdw" x:Class="WordSearch.MainWindowHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordSearch"
        mc:Ignorable="d"
        Title="Help" Height="600" Width="400" Style="{DynamicResource boardStyle}"
        ResizeMode="NoResize">
    <StackPanel>
        <Label x:Name="sizeTitleLbl" Style="{DynamicResource labelStyle}" Margin="0,20,0,0" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Label x:Name="sizeTextLbl" Style="{DynamicResource labelStyle}" HorizontalAlignment="Center"/>
        <Image Source="/sizeHelp.JPG" Width="150" Height="200"/>

        <Label x:Name="difficultyTitleLbl" Style="{DynamicResource labelStyle}" Margin="0,30,0,0" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Label x:Name="difficultyTextLbl" Style="{DynamicResource labelStyle}" HorizontalAlignment="Center"/>

        <Label x:Name="generateTitleLbl" Style="{DynamicResource labelStyle}" Margin="0,30,0,0" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Label x:Name="generateTextLbl" Style="{DynamicResource labelStyle}" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
